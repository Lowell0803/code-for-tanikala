            <script>
              document.addEventListener("DOMContentLoaded", function () {
                const selector = document.getElementById("college-selector");

                function filterLSCCandidates() {
                  const selectedCollege = selector.value.toLowerCase();

                  // Filter board member groups:
                  const boardGroups = document.querySelectorAll(".board-member-group");
                  boardGroups.forEach((group) => {
                    const groupCollege = group.getAttribute("data-college");
                    // Show group only if it matches the selected college; hide otherwise.
                    if (groupCollege === selectedCollege) {
                      group.style.display = "flex";
                    } else {
                      group.style.display = "none";
                    }
                  });

                  // Optionally, if you want to filter the other sections (Governor, Vice Governor) in the same way:
                  const candidateCards = document.querySelectorAll(".lsc-candidate");
                  candidateCards.forEach((card) => {
                    const candidateCollege = card.getAttribute("data-college").toLowerCase();
                    // Here, if the candidate belongs to the selected college, show it; otherwise hide it.
                    if (!selectedCollege || candidateCollege === selectedCollege) {
                      card.style.display = "FLEX";
                    } else {
                      card.style.display = "none";
                    }
                  });
                }

                // Run filter when the selector changes.
                selector.addEventListener("change", filterLSCCandidates);
                // Run filter on page load.
                filterLSCCandidates();
              });
            </script>
