    <!-- Test Date Picker for simulating the current date with datetime-local -->
    <div class="test-date">
      <label for="testDatePicker">Test Current Date:</label>
      <input type="datetime-local" id="testDatePicker" onchange="updateCurrentPeriod()" />
      <small>(Select a datetime to simulate the current date and update the period)</small>
    </div>

    <script>
      // Embed the electionConfig object for testing purposes.
      let electionConfig = <%- JSON.stringify(electionConfig) %>;

      // Use the fake current date if it exists, otherwise use the real date.
      function getEffectiveCurrentDate() {
        return electionConfig.fakeCurrentDate ? new Date(electionConfig.fakeCurrentDate) : new Date();
      }

      function getCurrentPeriod(now) {
        // Make sure all required dates are present
        if (!electionConfig.registrationStart || !electionConfig.registrationEnd ||
            !electionConfig.votingStart || !electionConfig.votingEnd) {
          return { name: "Election Not Active", duration: "Not set", timeUntil: null };
        }
        const regStart = new Date(electionConfig.registrationStart);
        const regEnd = new Date(electionConfig.registrationEnd);
        const voteStart = new Date(electionConfig.votingStart);
        const voteEnd = new Date(electionConfig.votingEnd);

        const daysUntil = (futureDate) => Math.ceil((futureDate - now) / (1000 * 60 * 60 * 24));

        if (now < regStart) {
          return {
            name: "Upcoming Registration",
            duration: regStart.toLocaleString() + " - " + regEnd.toLocaleString(),
            timeUntil: daysUntil(regStart) + " days until registration"
          };
        } else if (now >= regStart && now <= regEnd) {
          return {
            name: "Registration Open",
            duration: regStart.toLocaleString() + " - " + regEnd.toLocaleString(),
            timeUntil: null
          };
        } else if (now > regEnd && now < voteStart) {
          return {
            name: "Upcoming Voting",
            duration: voteStart.toLocaleString() + " - " + voteEnd.toLocaleString(),
            timeUntil: daysUntil(voteStart) + " days until voting"
          };
        } else if (now >= voteStart && now <= voteEnd) {
          return {
            name: "Voting Open",
            duration: voteStart.toLocaleString() + " - " + voteEnd.toLocaleString(),
            timeUntil: null
          };
        } else if (now > voteEnd) {
          // If manual intervention hasn't changed phase, default to "Results Checking Period"
          return { name: "Results Checking Period", duration: "", timeUntil: "Awaiting manual trigger" };
        }
        return { name: "Unknown Period", duration: "N/A", timeUntil: null };
      }

      function updateCurrentPeriod() {
        var testDateInput = document.getElementById("testDatePicker").value;
        var testDate = testDateInput ? new Date(testDateInput) : new Date();

        // Update the fake current date in the database via AJAX
        fetch('/setTestDate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ fakeCurrentDate: testDate.toISOString() })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Update the local electionConfig with the new fake date
            electionConfig.fakeCurrentDate = data.fakeCurrentDate;
            // Recalculate the current period
            var period = getCurrentPeriod(testDate);
            document.getElementById("currentPeriodDisplay").innerText = period.name;
            document.getElementById("currentPeriodDuration").innerText = period.duration || period.timeUntil;
          }
        })
        .catch(err => console.error("Error updating test date:", err));
      }

      // On page load, update the header using the effective current date.
      window.addEventListener('load', function() {
        const effectiveDate = getEffectiveCurrentDate();
        const period = getCurrentPeriod(effectiveDate);
        document.getElementById("currentPeriodDisplay").innerText = period.name;
        document.getElementById("currentPeriodDuration").innerText = period.duration || period.timeUntil;
      });
    </script>
