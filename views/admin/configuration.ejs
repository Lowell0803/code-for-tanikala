    <script>
      async function createElection() {
        const electionName = document.getElementById("election-name-input").value;
        const registrationStart = document.getElementById("reg-start-input").value;
        const registrationEnd = document.getElementById("reg-end-input").value;
        const votingStart = document.getElementById("vote-start-input").value;
        const votingEnd = document.getElementById("vote-end-input").value;

        if (!electionName || !registrationStart || !registrationEnd || !votingStart || !votingEnd) {
          alert("Please fill in all fields.");
          return;
        }

        const response = await fetch("/api/create-election", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ electionName, registrationStart, registrationEnd, votingStart, votingEnd }),
        });

        const data = await response.json();
        if (response.ok) {
          alert("Election created successfully!");

          // Update UI dynamically
          document.getElementById("election-name").innerText = electionName;
          document.getElementById("reg-start").innerText = registrationStart;
          document.getElementById("reg-end").innerText = registrationEnd;
          document.getElementById("vote-start").innerText = votingStart;
          document.getElementById("vote-end").innerText = votingEnd;

          location.reload();
        } else {
          alert(data.message);
        }
      }

      async function updateElection(electionId) {
        console.log("üü¢ updateElection() called with electionId:", electionId);

        let updatedData = {};

        // Get values from static fields
        const getValue = (id) => {
          const element = document.getElementById(id);
          return element ? element.innerText.trim() : "";
        };

        const newElectionName = getValue("election-name");
        const newRegStart = getValue("reg-start");
        const newRegEnd = getValue("reg-end");
        const newVoteStart = getValue("vote-start");
        const newVoteEnd = getValue("vote-end");

        console.log("üìå New electionName:", newElectionName);
        console.log("üìå New registrationPeriod:", newRegStart, "to", newRegEnd);
        console.log("üìå New votingPeriod:", newVoteStart, "to", newVoteEnd);

        // ‚úÖ Get partylists correctly
        let newPartylists = [];
        document.querySelectorAll(".partylist-item").forEach((item) => {
          const partylistName = item.innerText.trim();
          if (partylistName) newPartylists.push(partylistName);
        });

        console.log("üìå New partylists:", newPartylists);

        // ‚úÖ Extract Voter Counts from `<span>` elements
        let updatedListOfElections = [];
        document.querySelectorAll(".election-item").forEach((item, index) => {
          const collegeName = item.querySelector("b").innerText.replace(":", "").trim();

          // Extract the voter count from the span text (e.g., "500 students" ‚Üí 500)
          const voterText = item.querySelector(`#voter-count-${index}`).innerText;
          const voterCount = parseInt(voterText.replace(/\D/g, ""), 10) || 0;

          updatedListOfElections.push({ name: collegeName, voters: voterCount });

          console.log(`üìå College: ${collegeName}, Voters: ${voterCount}`);
        });

        console.log("üìå Final listOfElections:", updatedListOfElections);

        // ‚úÖ Add values to updatedData only if they exist
        if (newElectionName) updatedData.electionName = newElectionName;
        if (newRegStart) updatedData.registrationPeriod = { start: newRegStart, end: newRegEnd };
        if (newVoteStart) updatedData.votingPeriod = { start: newVoteStart, end: newVoteEnd };
        if (newPartylists.length > 0) updatedData.partylists = newPartylists;
        if (updatedListOfElections.length > 0) updatedData.listOfElections = updatedListOfElections;

        console.log("üìù Final updatedData object:", updatedData);

        // ‚úÖ Send updated data to API
        try {
          const response = await fetch("/api/update-election", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ electionId, ...updatedData }),
          });

          const data = await response.json();
          console.log("üü¢ Server response:", data);

          if (response.ok) {
            alert("Election updated successfully!");
            location.reload();
          } else {
            alert(data.message);
          }
        } catch (error) {
          console.error("‚ùå Fetch error:", error);
          alert("Failed to update election. Check the console for errors.");
        }
      }

      async function resetElection() {
        if (!confirm("Are you sure you want to reset the election? This will delete all current election data.")) {
          return;
        }

        const response = await fetch("/api/reset-election", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
        });

        const data = await response.json();
        if (response.ok) {
          alert(data.message);
          location.reload();
        } else {
          alert(data.message);
        }
      }
    </script>

