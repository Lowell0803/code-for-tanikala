      <main class="main">
        <div class="title">
          <h2>Admin Account Management</h2>
          <span class="indent">
            <!-- <button type="button" class="save-button action-buttons" id="button-add-accounts">Add Admin Accounts</button> -->
          </span>
        </div>
        <form id="add-admin-form" action="/admin-accounts/add" method="POST">
          <label>Name:</label>
          <input type="text" name="name" required />

          <label>Username:</label>
          <input type="text" name="username" required />

          <label>Password:</label>
          <input type="password" name="password" required />

          <br />
          <label>Image:</label>
          <input type="file" accept="image/*" onchange="convertImageToBase64(event)" required />

          <input type="hidden" name="imgBase64" id="imgBase64" />

          <input type="hidden" name="role" value="admin" />
          <button type="submit">Add Admin</button>
        </form>
        <br />
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Role</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% admins.forEach(admin => { %>
              <tr>
                <td>
                  <img src="<%= admin.img %>" width="50" height="50" alt="Profile Picture" />
                </td>
                <td><%= admin.name %></td>
                <td><%= admin.role %></td>
                <td><%= admin.username %></td>
                <td>
                  <% if (userRole === "superadmin") { %>
                  <span class="password" data-password="<%= admin.password %>">********</span>
                  <button onclick="togglePassword(this)">Show</button>
                  <% } else { %> ******** <% } %>
                </td>
                <td>
                  <% if (userRole === "superadmin") { %>
                  <form action="/admin-accounts/delete/<%= admin._id %>" method="POST">
                    <button type="submit">Delete</button>
                  </form>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>

    <footer class="footer">
      <div class="footer-left">
        <img src="img/calendar.png" class="footer-img" />
