      </div>
      <div class="footer-right">
        <img src="img/info.png" class="footer-img" id="info-img" />
        <p>Need help? Click&nbsp;</p>
        <a href="help_page"> here.</a>
      </div>
    </footer>

    <script>
      function convertImageToBase64(event) {
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onload = function () {
          document.getElementById("imgBase64").value = reader.result;
        };

        if (file) {
          reader.readAsDataURL(file);
        }
      }

      function togglePassword(button) {
        const span = button.previousElementSibling;
        if (span.textContent === "********") {
          span.textContent = span.dataset.password;
          button.textContent = "Hide";
        } else {
          span.textContent = "********";
          button.textContent = "Show";
        }
      }
    </script>

    <script src="admin/js/sidebar.js"></script>
    <script src="admin/js/index-admin.js"></script>
