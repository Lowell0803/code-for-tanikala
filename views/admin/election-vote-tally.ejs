    <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetch("/get-vote-counts")
          .then((response) => response.json())
          .then((data) => {
            if (!data.success) return;

            console.log("Raw vote data:", data.result); // Log raw API data

            // Group for Supreme Student Council (SSC)
            let sscData = {
              President: [],
              "Vice President": [],
              Senator: [],
            };

            // For Local Student Council (LSC) positions, we group Governor and Vice Governor by college.
            let lscData = {
              Governor: {},
              "Vice Governor": {},
            };

            // For Board Member positions, we'll store all result objects in an array.
            let boardMemberData = [];

            // Process each result object from API data.
            data.result.forEach((item) => {
              const pos = item.position;
              // If it's one of the SSC positions, assign it directly.
              if (pos === "President" || pos === "Vice President" || pos === "Senator") {
                sscData[pos] = item.candidates;
              }
              // Otherwise, check if the position contains "Board Member".
              else if (pos.indexOf("Board Member") !== -1) {
                // Push the whole board member result object.
                boardMemberData.push(item);
              }
              // Otherwise, assume it's an LSC position (formatted as "COLLEGE - Position").
              else if (pos.includes(" - ")) {
                const parts = pos.split(" - ");
                if (parts.length === 2) {
                  const collegeAcronym = parts[0].trim();
                  const posName = parts[1].trim();
                  if (!lscData[posName]) {
                    lscData[posName] = {};
                  }
                  lscData[posName][collegeAcronym.toLowerCase()] = item.candidates;
                  console.log("Grouped LSC position:", posName, "for college:", collegeAcronym.toLowerCase(), "with candidates:", item.candidates);
                }
              }
            });

            console.log("Grouped SSC Data:", sscData);
            console.log("Grouped LSC Data:", lscData);
            console.log("Board Member Data:", boardMemberData);

            // Render SSC positions (left side)
            renderCandidates("container-president", sscData["President"], "President");
            renderCandidates("container-vice-president", sscData["Vice President"], "Vice President");
            renderCandidates("container-senator", sscData["Senator"], "Senator");

            // Render LSC positions (right side)
            const collegeSelect = document.getElementById("college-selector");
            function renderLSC() {
              const selectedCollege = collegeSelect.value.toLowerCase();
              console.log("Selected college:", selectedCollege);
              // Render Governor and Vice Governor groups based on college.
              renderCandidates("container-lsc-governor", (lscData["Governor"] && lscData["Governor"][selectedCollege]) || [], "Governor");
              renderCandidates("container-lsc-vice-governor", (lscData["Vice Governor"] && lscData["Vice Governor"][selectedCollege]) || [], "Vice Governor");

              // Render Board Member groups.
              const boardContainer = document.getElementById("container-lsc-board-member");
              boardContainer.innerHTML = "";
              // If "all" is selected, render all board member groups.
              if (selectedCollege === "all") {
                boardMemberData.forEach((group) => {
                  let header = document.createElement("h2");
                  // Use the program text if available; otherwise, fall back to the position string.
                  if (group.program && group.program.length > 0) {
                    header.textContent = group.position.replace(/- \d+$/, "").trim() + " - " + group.program;
                  } else {
                    header.textContent = group.position;
                  }
                  boardContainer.appendChild(header);

                  if (group.candidates.length === 0) {
                    boardContainer.innerHTML += `<p>No candidates for this Board Member group</p>`;
                  } else {
                    const totalVotes = group.candidates.reduce((sum, c) => sum + c.votes, 0);
                    group.candidates.forEach((candidate) => {
                      const progressElement = document.createElement("div");
                      progressElement.classList.add("progress-element");

                      const label = document.createElement("p");
                      label.classList.add("progress-label");
                      label.textContent = candidate.name;

                      const progressBar = document.createElement("progress");
                      progressBar.max = totalVotes;
                      progressBar.value = candidate.votes;

                      const voteCount = document.createElement("span");
                      voteCount.textContent = `${candidate.votes} votes`;

                      progressElement.appendChild(label);
                      progressElement.appendChild(progressBar);
                      progressElement.appendChild(voteCount);
                      boardContainer.appendChild(progressElement);
                    });
                  }
                });
              } else {
                // Render only board member groups that belong to the selected college.
                const filtered = boardMemberData.filter((group) => {
                  // Extract the college acronym from the group position.
                  const parts = group.position.split(" - ");
                  return parts[0].trim().toLowerCase() === selectedCollege;
                });
                if (filtered.length === 0) {
                  boardContainer.innerHTML = `<p>No Board Member candidates for ${selectedCollege.toUpperCase()}</p>`;
                } else {
                  filtered.forEach((group) => {
                    let header = document.createElement("h2");
                    if (group.program && group.program.length > 0) {
                      header.textContent = group.position.replace(/- \d+$/, "").trim() + " - " + group.program;
                    } else {
                      header.textContent = group.position;
                    }
                    boardContainer.appendChild(header);

                    if (group.candidates.length === 0) {
                      boardContainer.innerHTML += `<p>No candidates for this Board Member group</p>`;
                    } else {
                      const totalVotes = group.candidates.reduce((sum, c) => sum + c.votes, 0);
                      group.candidates.forEach((candidate) => {
                        const progressElement = document.createElement("div");
                        progressElement.classList.add("progress-element");

                        const label = document.createElement("p");
                        label.classList.add("progress-label");
                        label.textContent = candidate.name;

                        const progressBar = document.createElement("progress");
                        progressBar.max = totalVotes;
                        progressBar.value = candidate.votes;

                        const voteCount = document.createElement("span");
                        voteCount.textContent = `${candidate.votes} votes`;

                        progressElement.appendChild(label);
                        progressElement.appendChild(progressBar);
                        progressElement.appendChild(voteCount);
                        boardContainer.appendChild(progressElement);
                      });
                    }
                  });
                }
              }
            }
            collegeSelect.addEventListener("change", renderLSC);
            renderLSC();
          })
          .catch((error) => console.error("Error fetching vote counts:", error));

        function renderCandidates(containerId, candidates, positionTitle) {
          const container = document.getElementById(containerId);
          container.innerHTML = "";
          const titleElement = document.createElement("h2");
          titleElement.textContent = positionTitle;
          container.appendChild(titleElement);
          if (candidates.length === 0) {
            container.innerHTML += `<p>No candidates for ${positionTitle}</p>`;
            return;
          }
          const totalVotes = candidates.reduce((sum, c) => sum + c.votes, 0);
          candidates.forEach((candidate) => {
            const progressElement = document.createElement("div");
            progressElement.classList.add("progress-element");

            const label = document.createElement("p");
            label.classList.add("progress-label");
            label.textContent = candidate.name;

            const progressBar = document.createElement("progress");
            progressBar.max = totalVotes;
            progressBar.value = candidate.votes;

            const voteCount = document.createElement("span");
            voteCount.textContent = `${candidate.votes} votes`;

            progressElement.appendChild(label);
            progressElement.appendChild(progressBar);
            progressElement.appendChild(voteCount);
            container.appendChild(progressElement);
          });
        }
      });
    </script>

    <script>
      function formatDate(isoString) {
        const date = new Date(isoString);
        const options = {
          month: "long",
          day: "2-digit",
          year: "numeric",
          hour: "2-digit",
          minute: "2-digit",
          hour12: true,
        };
        return date.toLocaleString("en-US", options).replace(",", " -").toUpperCase();
      }

      function updateDateTime() {
        const datetimeElement = document.getElementById("datetime");
        if (!datetimeElement) return;

        // Get the initial time from the data attribute
        let currentTime = new Date(datetimeElement.getAttribute("data-date"));

        function update() {
          datetimeElement.textContent = formatDate(currentTime);
          currentTime.setMinutes(currentTime.getMinutes() + 1); // Increment by 1 minute
        }

        update(); // Set initial formatted date
        setInterval(update, 60000); // Update every minute (60000ms)
      }

      document.addEventListener("DOMContentLoaded", updateDateTime);
    </script>

